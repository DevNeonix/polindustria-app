<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp">

    <TextView
        android:id="@+id/tvCliente__iot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingTop="12sp"
        android:textColor="@color/primary_text"
        android:text="Nombre del Cliente"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvProducto__iot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingTop="12sp"
        android:textColor="@color/secondary_text"
        android:text="Nombre del producto"
        android:textSize="16sp" />
    <LinearLayout
        android:id="@+id/llProducto__iot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/chkProducto__iot"
            android:layout_width="wrap_content"
            android:buttonTint="@color/secondary_text"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:text="Tiene viÃ¡ticos" android:gravity="center"></TextView>
    </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="Observaciones"
            android:height="150sp"
            android:textColor="@color/secondary_text"
            android:textColorHint="@color/secondary_text"
            android:inputType="text|textMultiLine"/>

    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/btnVerPersonal__iot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:padding="8sp"
        android:text="Marcar asistencia"
        fancy:mfb_defaultColor="@color/primary"
        fancy:mfb_focusColor="@color/primary_dark"
        fancy:mfb_radius="4sp" />
</LinearLayout>