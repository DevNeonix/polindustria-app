<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/MyTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAgregarObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="@string/agregar_observaciones" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/btnGuardarObservaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:text="Ok"
        android:padding="8dp"
        app:mfb_radius="2sp"
        app:mfb_focusColor="@color/primary_dark"
        app:mfb_textColor="@color/icons"
        app:mfb_defaultColor="@color/secondary_text" />

</LinearLayout>